{
  "name": "alphabet-app",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "db:migrate": "cd database && npm run migrate",
    "db:seed": "cd database && npm run seed",
    "db:reset": "cd database && npm run reset",
    "lint": "cd server && npm run lint && cd ../client && npm run lint",
    "test": "cd database && npm test && cd ../server && npm test && cd ../client && npm test",
    "test:db": "cd database && npm test",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "test:e2e": "npx playwright test",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install && cd ../database && npm install"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "concurrently": "^9.1.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2"
  }
}
